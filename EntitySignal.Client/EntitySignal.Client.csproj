<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Version>1.0.3.1</Version>
    <Authors>EntitySignal Team</Authors>
    <Company></Company>
    <Description>Connect to Entity Signal via C#</Description>
    <PackageProjectUrl>https://entitysignal.com/</PackageProjectUrl>
    <PackageIconUrl>https://entitysignal.com/mstile-150x150.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/dustout/entitysignal</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageReleaseNotes>Added support for C# Entity Signal Client</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" Version="3.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="3.1.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
